<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <% if logged_in_company? %>

    <%= link_to "stress app", current_company, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "ホーム", current_company %></li>
        <li><%= link_to "マニュアル", help_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "マイページ", current_company %></li>
              <li><%= link_to "設定", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
          
    <% elsif logged_in_employee? %>
      <%= link_to "stress app", current_employee, id: "logo" %>
      <nav>
      <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "ホーム", current_employee %></li>
          <li><%= link_to "マニュアル", help_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "マイページ", current_employee %></li>
              <li><%= link_to "設定", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_employee_path, method: :delete %>
              </li>
            </ul>
          </li>
          
        <% else %>
        <%= link_to "stress app", root_path, id: "logo" %>
        <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "ホーム", root_path %></li>
          <li><%= link_to "マニュアル", help_path %></li>
          <li><%= link_to "会社ログイン", login_path %></li>
          <li><%= link_to "従業員ログイン", login_employee_path%></li>
        <% end %>

      </ul>
    </nav>
  </div>
</header>