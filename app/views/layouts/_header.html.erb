<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
  <% if logged_in_company? %>
  <%= link_to image_tag("/icon32.svg",:size => "32x32", :alt => "アイコン"), current_company %>
  <%= link_to "stress app", current_company, class: "my-0 mr-md-auto font-weight-normal", id: "logo" %>
    <nav class="my-2 my-md-0 mr-md-3 d-print-none">
        <%= link_to "ホーム", current_company, class: "p-2 text-dark"%>
        <%= link_to "マニュアル", help_path, class: "p-2 text-dark" %>
        <%= link_to "マイページ", current_company, class: "p-2 text-dark" %>
        <%= link_to "ログアウト", logout_company_path, class: "btn btn-outline-primary", method: :delete %>
    </nav>

  <% elsif logged_in_employee? %>
  <%= link_to image_tag("/icon32.svg",:size => "32x32", :alt => "アイコン"), current_employee %>
  <%= link_to "stress app", current_employee, class: "my-0 mr-md-auto font-weight-normal", id: "logo" %>
    <nav class="my-2 my-md-0 mr-md-3 d-print-none">
        <%= link_to "ホーム", current_employee, class: "p-2 text-dark"%>
        <%= link_to "マニュアル", help_path, class: "p-2 text-dark" %>
        <%= link_to "マイページ", current_employee , class: "p-2 text-dark" %>
        <%= link_to "ログアウト", logout_employee_path, class: "btn btn-outline-primary", method: :delete %>
    </nav>
    
  <% else %>
  <%= link_to image_tag("/icon32.svg",:size => "32x32", :alt => "アイコン"), root_path %>
  <%= link_to "stress app", root_path, class: "my-0 mr-md-auto font-weight-normal", id: "logo" %>
    <nav class="my-2 my-md-0 mr-md-3 d-print-none">
      <%= link_to "ホーム", root_path, class: "p-2 text-dark"%>
      <%= link_to "マニュアル", help_path, class: "p-2 text-dark" %>
    </nav>
    <%= link_to "会社ログイン", login_company_path, class: "btn btn-outline-primary d-print-none" %>
    <%= link_to "従業員ログイン", login_employee_path, class: "btn btn-outline-primary d-print-none" %>
  <% end %>
</div>
    