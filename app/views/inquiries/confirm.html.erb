<% provide(:title, 'お問い合わせ') %>
<div class="row">
  <div class="col-12 pb-5">
    <h1 class="text-center pt-3 pb-5">お問い合わせ確認</h1>
 
    <%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
      <table class="table">
        <tr>
          <th>名前</th>
          <td>
            <%= f.hidden_field :name %>
            <%= @inquiry.name %>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td>
            <%= f.hidden_field :email %>
            <%= @inquiry.email %>
          </td>
        </tr>
        <tr>
          <th>お問い合わせ内容</th>
          <td>
            <%= f.hidden_field :message %>
            <%= simple_format(@inquiry.message) %>
          </td>
        </tr>
      </table>
      
      <%= f.submit '送信', :class => 'btn btn-primary' %>
    <% end %>
  </div>
</div>